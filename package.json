{
  "name": "nestjs_example",
  "version": "1.0.0",
  "description": "nestjs_example",
  "author": "t.kosminov",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": "12.14.1"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node --files -r tsconfig-paths/register src/main.ts",
    "start:debug": "DEBUG='*' nodemon --config nodemon-debug.json",
    "start:debug:redis": "DEBUG=ioredis:* nodemon",
    "start:dev": "nodemon",
    "start:build": "NODE_ENV=development node dist/main.js",
    "start:beta": "NODE_ENV=beta node dist/main.js",
    "start:prod": "NODE_ENV=prod node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint-fix": "npm run lint -- --fix",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migration:create": "typeorm migration:create -d src/database/migrations -n"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@nestjs/common": "7.0.5",
    "@nestjs/core": "^7.0.5",
    "@nestjs/graphql": "^7.0.15",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.5",
    "@nestjs/platform-socket.io": "^7.0.5",
    "@nestjs/swagger": "^4.4.0",
    "@nestjs/typeorm": "^7.0.0",
    "@nestjs/websockets": "^7.0.5",
    "amqplib": "^0.5.5",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "apollo-link-retry": "^2.2.15",
    "apollo-link-timeout": "^1.4.0",
    "apollo-server-express": "^2.11.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "config": "^3.3.0",
    "cookie-parser": "^1.4.5",
    "dataloader": "^2.0.0",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "graphql-upload": "^10.0.0",
    "graphql-voyager": "^1.0.0-rc.29",
    "hasha": "^5.2.0",
    "helmet": "^3.21.3",
    "ioredis": "^4.16.0",
    "isomorphic-unfetch": "^3.0.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.2.0",
    "swagger-ui-express": "^4.1.4",
    "transliteration": "^2.1.8",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.5",
    "@types/amqplib": "^0.5.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.3",
    "@types/graphql-upload": "^8.0.3",
    "@types/helmet": "0.0.45",
    "@types/ioredis": "^4.14.9",
    "@types/node": "^13.9.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/pg": "^7.14.3",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-redis": "^1.0.25",
    "@types/supertest": "^2.0.8",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.0",
    "tslint-clean-code": "^0.2.10",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.2.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
