{
  "name": "nestjs_auth",
  "version": "0.0.0",
  "description": "nestjs_auth",
  "author": "t.kosminov",
  "license": "MIT",
  "scripts": {
    "build": "rm -r dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node --files -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migration:create": "typeorm migration:create -d src/database/migrations -n"
  },
  "dependencies": {
    "@nestjs-plus/common": "^1.1.0",
    "@nestjs-plus/rabbitmq": "^1.2.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.0.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.1.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "@nestjs/websockets": "^6.1.0",
    "amqplib": "^0.5.3",
    "apollo-link-http": "^1.5.14",
    "apollo-server-express": "^2.4.8",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "config": "^3.1.0",
    "cookie-parser": "^1.4.4",
    "dataloader": "^1.4.0",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.16.0",
    "isomorphic-unfetch": "^3.0.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.9.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "socket.io": "^2.2.0",
    "swagger-ui-express": "^4.0.2",
    "type-graphql": "^0.17.1",
    "typeorm": "^0.2.16"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@nestjs/testing": "^6.0.0",
    "@types/amqplib": "^0.5.11",
    "@types/config": "0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/jest": "^23.3.1",
    "@types/node": "^11.13.2",
    "@types/passport-jwt": "^3.0.1",
    "@types/pg": "^7.4.14",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.5",
    "jest": "^24.7.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.12.1",
    "tslint-clean-code": "^0.2.9",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
